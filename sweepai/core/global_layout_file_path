import numpy as np

# Define the vector
vector = np.array([1, 2, 3, 4, 5])

# Function to ensure the vector runs responsively
def responsive_vector(vector):
    # Code to adjust the vector to different screen sizes and orientations
    # For simplicity, let's just normalize the vector and multiply by the screen size
    screen_size = np.array([800, 600])  # example screen size
    norm_vector = vector / np.linalg.norm(vector)
    responsive_vector = norm_vector * screen_size
    return responsive_vector

# Perform a cleanup of the code
# Code to improve the quality and efficiency of the code
# For simplicity, let's just print the responsive vector and its norm
print("Responsive vector:", responsive_vector(vector))
print("Norm of responsive vector:", np.linalg.norm(responsive_vector(vector)))

