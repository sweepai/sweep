    "version": "0.2.0",
    "configurations": [
        {
            "name":"Python: Current File",
            "type":"python",
            "request":"launch",
            "program":"${file}",
            "console":"integratedTerminal",
            "justMyCode":true
        },
        {
            "name":"Issue creation",
            "type":"python",
            "request":"launch",
            "program":"${workspaceFolder}/tests/rerun_issue_direct.py",
            "console":"integratedTerminal",
            "justMyCode":true,
            "args": [
                "https://github.com/sweepai/sweep/issues/2154"
            ]
        },
        {
            "name": "FastAPI",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "sweepai.api:app",
                "--port",
                "8080",
                "--host",
                "0.0.0.0",
                "--workers",
                "2"
            ],
            "justMyCode": true,
            "host": "0.0.0.0"
        }
    ]
}
